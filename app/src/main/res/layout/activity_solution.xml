<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ecfefe"
    tools:context=".Solution">




    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/cardViewGraph"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        >

        <!--Relative layout to display -->
        <!-- use of programming languages -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Text view to use of -->
            <!-- programming languages text-->
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:fontFamily="@font/quicksand"
                android:layout_height="wrap_content"
                android:text="Result Analysis"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"/>

            <!--View to display the line-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_two"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_score"
                android:fontFamily="@font/quicksand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜… your score is 0 out of 10"
                android:gravity="center"
                android:padding="2dp"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:textColor="@android:color/secondary_text_dark"
                android:layout_marginBottom="2dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_two"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="bottom"

                >


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/Analysis"
                        android:fontFamily="@font/quicksand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Analysis"
                        android:textStyle="bold"
                        android:textColor="#7A8089"
                        android:textSize="20dp"
                        >

                    </TextView>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/Solution"
                        android:textColor="#7A8089"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Solution"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/quicksand"
                        >

                    </TextView>


                </androidx.cardview.widget.CardView>



            </LinearLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                >
                <ProgressBar
                    android:id="@+id/ResultprogressBar"
                    android:layout_width="0dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_weight="1"
                    android:max="10"
                    android:minHeight="50dp"
                    android:progress="4"/>

                <TextView
                    android:id="@+id/tv_Resultprogress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="4/9"

                    />




            </LinearLayout>


            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="22sp"
                android:textColor="#000000"
                android:text="What Country does this flag belog to?"
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Your Answer"
                android:fontFamily="@font/quicksand"
                android:layout_marginStart="7dp"

                android:textColor="#000000"
                android:layout_marginTop="60dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_YourAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="15dp"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:textColor="#5C5E67"
                android:textSize="18sp"
                android:background="@drawable/default_option_border_bg"
                android:text="Apple"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Correct Answer"

                android:layout_marginStart="7dp"
                android:fontFamily="@font/quicksand"
                android:textColor="#000000"
                android:layout_marginTop="10dp"

                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_AcutalCorrectAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="#5C5E67"
                android:fontFamily="@font/quicksand"
                android:textSize="18sp"
                android:background="@drawable/default_option_border_bg"
                android:text="Apple"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="25dp">


                <ImageView
                    android:id="@+id/btn_previous"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="200dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/back">


                </ImageView>

                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/next" />


            </LinearLayout>










        </LinearLayout>









    </ScrollView>




</LinearLayout>